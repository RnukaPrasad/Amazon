pipeline {
    agent any
    stages {
        stage ('clean-up') {
            steps {
                cleanWs()
            }
        }
        stage ('build') {
             dir ('Amazon/Amazon'){
             steps {
                     sh 'mvn clean install'
                   }
             }
        }
        stage ('test') {
             dir ('Amazon/Amazon'){
             steps {
                     archiveArtifacts artifacts: 'Amazon-Web/target/*.war', followSymlinks: false
                  }   
             }
        }
        stage ('run') {
            dir ('Amazon/Amazon'){
            steps {
                    sh 'cp Amazon-Web/target/*.war /opt/tomcat/webapps'
                }
            }    
        }
    }
}
